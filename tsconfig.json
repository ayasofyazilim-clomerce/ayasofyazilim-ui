{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./",
    "lib": ["ES2021"],
    "paths": {
      "@tiptap-location/*": ["./tiptap/*"],
      "@/*": ["@/*", "./src/*"],
      "@/hooks/*": ["./src/hooks/*", "@/hooks/*"]
    }
  }
}
